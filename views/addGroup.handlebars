<!DOCTYPE html>
<!-- PAGE AFTER SUCCESSFULLY ADDING A NEW GROUP
	<h3> Successfully added group! </h3>
 -->
<html>
<head>
	<title>hangouts R us</title>	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="css/bootstrap.min.css" rel="stylesheet">
	<link href="css/bootstrap-theme.min.css" rel="stylesheet">
	<link href="css/sidebar.css" rel="stylesheet">
 	<link href="css/style.css" rel="stylesheet">
 	<link href="css/groups.css" rel="stylesheet">
 	<link href="css/photogallery.css" rel="stylesheet">
	<link rel='stylesheet' href='fullcalendar/fullcalendar.css' />
	<link rel="stylesheet" type="text/css" media="screen" href="http://cdnjs.cloudflare.com/ajax/libs/fancybox/1.3.4/jquery.fancybox-1.3.4.css" />
	<style type="text/css">
	    a.fancybox img {
	        border: none;
	        box-shadow: 0 1px 7px rgba(0,0,0,0.6);
	    } 
	</style>
	<!-- this is a comment in HTML -->    
	<meta name="viewport" content="width=device-width, height=device-height, initial-scale=1">
</head>
<body>
	<div id="wrapper">
		<!-- h1 through h6 are headers. The higher the number, the smaller the header -->
		<!-- p means paragraph -->
		<div id="sidebar-wrapper">	
			<div class="sidebar-nav">
				<li><div id="profileName">
						<img align="middle" class="img-rounded" src="images/icson.jpg" onError="this.src='images/placeholder.png';"> </img>
					</div>
					<a id="sidebarName"> Cheese Corn</a>
				</li><hr>
				<li><a href="homepage">Home</a></li><hr>
				<li><a href="friends">Your Friends</a></li>
				<li><a href="gallery">Your Photos</a></li>
				<li><a href="viewGroups">Your Groups</a></li>
				<li><a href="upcomingEvents">Upcoming Events</a></li>
				<a href="#menu-toggle" id="menu2-toggle"> <button id="backButton" type="button" class="btn"><span class="glyphicon glyphicon-chevron-left" aria-hidden="true">
					</span> Back</button></a>
				<a href="index"> <button id="logoutButton" type="button" class="btn"><span class="glyphicon glyphicon-off" aria-hidden="true">
					</span> Log Out</button></a>
			</div>
		</div> <!-- end of sidebar wrapper -->

		<div id="page-content-wrapper">
			<div class="container-fluid">
				<div class="jumbotron">
					<h1>Your Groups</h1>
				</div>
				<div class="miniNavBar">
					<table class="miniNavTable"> 
						<tr><td> <a href="#menu-toggle"  id="menu3-toggle"><span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
							    Toggle Menu
							</a></td>
							<td> <a href="#showGroup" id="showGroup"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
							    New Groups
							</a></td>
						</tr>
					</table>
				</div>
				<hr>

				<h3> Successfully added group! </h3>

				
				<div class="btn-group btn-group-justified" role="group" aria-label="...">
					<div class="btn-group"><a href="#" class="btn btn-default" style="float:left;">Groups</a></div>

					<div class="btn-group"><a href="/friends" class="btn btn-default btn-group" style="float:right;">Friends</a></div>
				</div>
				
				<br>

				<!-- COLLAPSABLE FORM FOR NEW GROUP -->
				<div id="submenu" style="margin-bottom: 20px;">
					<form role="form" method="get" action="/addGroup">
					  <div class="form-group">
					    <label for="friends">Choose Your Friends</label><br> 
						    <div class="scrollable">
						    <!-- <input type="text" class="form-control" id="friends" placeholder="Names" name="friends"> -->
							
							  {{#each friends}}
							  <input type="checkbox" name="friend" value="friend" style="margin-left: 10px; margin-right: 7px; padding: 5px;">{{name}}<br>
							  {{/each}}
							</div>
					  </div>
					  <div class="form-group">
					    <label for="name">Choose A Group Name</label>
					    <input type="text" class="form-control" id="name" placeholder="[the best group ever]" name="name">
					  </div>
					  <div class="form-group">
					    <label for="description">Description (Optional)</label>
					    <input type="text" class="form-control" id="description" placeholder="teamwork makes the dream work..." name="description">
					  </div>
					  <input type="submit" id="submitBtn" class="btn btn-default" value="Add New Group"></input>
					  
					</form>
				</div>
				
				<!-- LIST OF YOUR SQUADS -->
				<div>
					<ul class="listview">
						{{#each groups}}
						<li><a href="group/{{name}}">{{name}}<span class="glyphicon glyphicon-chevron-right" aria-hidden="true" style="float:right;"></a></li>
						{{/each}}
					</ul>				
				</div>

			</div> <!-- END CONTAINER-FLUID -->
		</div>
	</div>
	
	<script src="js/jquery.js"></script> 
    <script src="js/bootstrap.min.js"></script>
	<script src="fotorama/fotorama.js"></script>
	<script type="text/javascript" src="http://code.jquery.com/jquery-1.11.0.min.js"></script>
	<script type="text/javascript" src="http://code.jquery.com/jquery-migrate-1.2.1.min.js"></script>
	<script type="text/javascript" src="http://cdnjs.cloudflare.com/ajax/libs/fancybox/1.3.4/jquery.fancybox-1.3.4.pack.min.js"></script> 
	<script>
		$(document).ready(function() {
			$("#wrapper").toggleClass("toggled");
			$("#submenu").hide();
		});
		$("#showGroup").click(function(e) {
	        e.preventDefault();
	        $("#submenu").toggle();
	    });
	    $("#menu2-toggle").click(function(e) {
	        e.preventDefault();
	        $("#wrapper").toggleClass("toggled");
	    });
	     $("#menu3-toggle").click(function(e) {
	        e.preventDefault();
	        $("#wrapper").toggleClass("toggled");
	    });
    </script>
     

</body>
</html>